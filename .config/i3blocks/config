#i3blocks config - minimal and simplistic

[cpu_mem]
command=~/.config/i3blocks/cpu_mem.sh
markup=pango
interval=5


[volume]
command=~/.config/i3blocks/volume.sh
interval=1
signal=10

[keyboard]
command=~/.config/i3blocks/kb_layout.sh
interval=1
label=

[time]
command=~/.config/i3blocks/time.sh
signal=1
markup=pango
color=#ffcc00
interval=60
